/* pages/index/index.wxss */

page {
  background-color: #e4e4e4;
  justify-content: center;
}

.mainBody {
  width: 720rpx;
  padding: 10rpx;
  /* border: black solid 2px; */
  justify-content: center;
  display: flex;
  flex-wrap: wrap;
}

.searchArea {
  width: 700rpx;
  background-color: #f5f5f5;
  margin: 20rpx 10rpx;
  border-radius: 20rpx;
  justify-content: center;
  height: fit-content;
  display: flex;
  flex-wrap: wrap;
}

.postingArea {
  width: 700rpx;
  background-color: #f5f5f5;
  margin: 10rpx 10rpx;
  padding: 20rpx 5rpx 20rpx 5rpx;
  border-radius: 20rpx;
  justify-content: center;
  height: fit-content;
  display: flex;
  flex-wrap: nowrap;
}

.ongoingOrderArea {
  width: 700rpx;
  background-color: #f5f5f5;
  margin: 20rpx 10rpx;
  border-radius: 20rpx;
  justify-content: center;
  height: 200rpx;
  flex-wrap: nowrap;
  display: flex;
}

.recommendationOrdersArea {
  width: 700rpx;
  background-color: #f5f5f5;
  margin: 20rpx 10rpx;
  border-radius: 20rpx;
  justify-content: center;
  height: 680rpx;
}



.searchBarContainer {
  width: 680rpx;
  height: fit-content;
  padding: 5rpx;
  margin: 5rpx;
}

.catagloriesBarContainer {
  width: 680rpx;
  height: fit-content;
  padding: 5rpx;
  margin: 5rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
}

.searchArea .searchBar {}

.catagloriesBarContainer .cataglories {
  height: 56rpx;
  width: 128rpx;
  /* border: black 2rpx solid; */
  border-radius: 60rpx;
  background-color: #d8d8d8;
  margin: 2rpx 20rpx 10rpx 20rpx;
  padding: 2rpx 10rpx 2rpx 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  color: #3f3f3f;
}

.postingBtnContainer {
  margin: 10rpx;
}

.ongoingOrderItemContainer{
  width: 78%;
  height: 180rpx;
}

.ongoingOrderStatusContainer{
  width: 18%;
  height: 180rpx;
}
.ongoingOrderStatus{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 90%;
  height: 100%;
  background-color: #ffffff;
  margin: 10rpx 20rpx 10rpx 10rpx;
}
.ongoingOrderStatusIcon{
  width: 81rpx;
  height: 81rpx;
  margin: 20rpx 5rpx 20rpx 5rpx;
}
.ongoingOrderStatusText{
  font-size: 24rpx;
  margin: 5rpx 5rpx 10rpx 5rpx;
}