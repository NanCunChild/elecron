/* pages/index/index.wxss */

page {
  background-color: #e4e4e4;
  justify-content: center;
  overflow: hidden;
}

.mainBody {
  width: 720rpx;
  padding: 10rpx;
  /* border: black solid 2px; */
  justify-content: center;
  display: flex;
  flex-wrap: wrap;
}

.searchArea {
  width: 700rpx;
  background-color: #f5f5f5;
  margin: 20rpx 10rpx 10rpx 10rpx;
  border-radius: 20rpx;
  justify-content: center;
  height: fit-content;
  display: flex;
  flex-wrap: wrap;
}

.postingArea {
  width: 700rpx;
  background-color: #f5f5f5;
  margin: 10rpx;
  padding: 20rpx 5rpx 20rpx 5rpx;
  border-radius: 20rpx;
  justify-content: center;
  height: fit-content;
  display: flex;
  flex-wrap: nowrap;
}

.ongoingOrderArea {
  width: 700rpx;
  background-color: #f5f5f5;
  margin: 10rpx 10rpx;
  border-radius: 20rpx;
  justify-content: center;
  align-items: center;
  height: 200rpx;
  flex-wrap: nowrap;
  display: flex;
}

.recommendationOrdersArea {
  display: flex;
  flex-wrap: wrap;
  width: 720rpx;
  background-color: #f5f5f5;
  margin: 10rpx 10rpx;
  border-radius: 20rpx;
  justify-content: center;
  height: 680rpx;
}

.itemCardScrollContainer {
  height: 660rpx;
  width: 700rpx;
  display: flex;
  flex-wrap: wrap;
  /* justify-content: space-between;
  flex-direction: row; */
  white-space: normal;
}

.itemCardScrollContainer .itemCardContainer {
  display: flex;
  flex-wrap: wrap;
  width: 700rpx;
  flex-direction: row;
}



.searchBarContainer {
  width: 680rpx;
  height: fit-content;
  padding: 5rpx;
  margin: 5rpx;
}

.catagloriesBarContainer {
  width: 620rpx;
  /* background-color: #e4e4e4; */
  border-radius: 100rpx;
  height: fit-content;
  padding: 5rpx 10rpx 5rpx 10rpx;
  margin: 10rpx 5rpx;
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  align-content: center;
  justify-content: space-between;
  /* box-shadow: 4rpx 2rpx 5rpx 1rpx #d8d8d8; */
}

.searchArea .searchBar {}

.catagloriesBarContainer .cataglories {
  height: 48rpx;
  width: 128rpx;
  /* border: black 2rpx solid; */
  border-radius: 60rpx;
  background-color: #fafafa;
  margin: 8rpx 10rpx 8rpx 10rpx;
  padding: 2rpx 16rpx 2rpx 16rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  color: #3f3f3f;
  box-shadow: 3rpx 3rpx 2rpx 2rpx #d6d6d6;
}

.postingBtnContainer {
  margin: 8rpx;
}

.ongoingOrderItemContainer {
  width: 78%;
  height: 180rpx;
  display: flex;
  align-items: center;
}

.ongoingOrderStatusContainer {
  display: flex;
  align-items: center;
  width: 18%;
  height: 180rpx;
}

.ongoingOrderStatus {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 90%;
  height: 80%;
  background-color: #ffffff;
  border-radius: 10rpx;
  margin: 2rpx 2rpx 2rpx 5rpx;
}

.ongoingOrderStatusIcon {
  display: flex;
  width: 48rpx;
  height: 48rpx;
  margin: 10rpx;
}

.ongoingOrderStatusText {
  display: flex;
  font-size: 28rpx;
  margin: 5rpx 5rpx 10rpx 5rpx;
}