      <view class="itemCardContainer">
        <ncc_itemCard cardImg="/images/test2.png" cardAvator="/images/avatar.png" cardNickname="John Doe" cardTitle="Awesome Product" cardPrice="$99.9" cardDataPlate="100"></ncc_itemCard>
        <ncc_itemCard></ncc_itemCard>
        <ncc_itemCard></ncc_itemCard>
        <ncc_itemCard></ncc_itemCard>
