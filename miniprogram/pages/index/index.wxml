<view class="mainBody">
  <view>
    <!--LogoArea-->
    <view></view>
  </view>

  <view class="searchArea">
    <!--SearchArea-->
    <ncc_searchBar search_holder="乐到不跑"></ncc_searchBar>
    <view class="catagloriesBarContainer">
      <view class="cataglories">需求类型</view>
      <view class="cataglories">时效</view>
      <view class="cataglories">取货方式</view>
    </view>
  </view>

  <view class="postingArea">
    <!--PostingArea-->
    <view class="postingBtnContainer">
      <ncc_extendBtn backgroundColor="#08609d" titleText="发布一单" detailText="发布你的需求" iconSrc="/images/icons/extend_btn_order.png"></ncc_extendBtn>
    </view>
    <view class="postingBtnContainer">
      <ncc_extendBtn backgroundColor="#f68237" titleText="发布动态" detailText="分享一下今天发生了啥" iconSrc="/images/icons/entend_btn_timeline.png"></ncc_extendBtn>
    </view>
  </view>

  <view class="ongoingOrderArea">
    <!--OngoingOrdersArea-->
    <view class="ongoingOrderItemContainer">
      <ncc_orderBar titleText="正在进行的工单" detailText="我要代做实验课"></ncc_orderBar>
