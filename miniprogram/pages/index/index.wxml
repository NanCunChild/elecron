    <view class="ongoingOrderStatusContainer">
      <view class="ongoingOrderStatus">
        <view class="ongoingOrderStatusIcon">Img Here</view>
        <view class="ongoingOrderStatusText">Done</view>
      </view>
    </view>
  </view>


  <view class="recommendationOrdersArea">
    <!--RecommandationArea-->
