/* components/item_bar/index.wxss */

.order {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  width: 90%;
  height: 100%;
  background-color: #ffffff;
  margin: 10rpx 10rpx 10rpx 20rpx;
}

.order_imgContainer {
  display: flex;
}

.order_img {
  width: 106rpx;
  height: 106rpx;
  padding: 2rpx;
}

.order_texts {
  display: flex;
  flex-direction: column;
  margin: 10rpx 20rpx 10rpx 10rpx;
}

.order_title {
  font-size: 28rpx;
  margin: 2rpx 0rpx 2rpx 2rpx;
}

.order_details {
  font-size: 20rpx;
  margin: 2rpx 0rpx 2rpx 2rpx;
}